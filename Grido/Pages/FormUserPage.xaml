<Page x:Class="Grido.Pages.FormUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Grido.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FormUserPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="4">
            <Button Padding="30,0" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Cancel_Click" Margin="0,20" Content="Назад"/>
            <Button Padding="30,0" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Save_Click" Margin="0,20" Content="Сохранить"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="40">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Логин:" Margin="10" Padding="20, 0"/>
                <TextBox Width="400" Text="{Binding User.Login}" Margin="0, 10"/>
            </StackPanel>

            <StackPanel Visibility="{Binding ForAdminsVis}" Orientation="Vertical">
                <TextBlock Text="Текущий пароль:" Margin="10" Padding="20, 0"/>
                <TextBox Width="400" Text="{Binding User.Password}" Margin="0, 10"/>
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="Ник:" Margin="10" Padding="20, 0"/>
                <TextBox Width="400" Text="{Binding User.Nickname}" Margin="0, 10"/>
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="Новый пароль:" Margin="10" Padding="20, 0"/>
                <TextBox Width="400" Text="{Binding NewPassword}" Margin="0, 10"/>
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="Подтверждение нового пароля:" Margin="10" Padding="20, 0"/>
                <TextBox Width="400" Text="{Binding ConfirmPassword}" Margin="0, 10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
